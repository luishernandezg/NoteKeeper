<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CourseTitle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#009688</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BrandedText" parent="@style/TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/pluralsightOrange</item>
    </style>

    <style name="NoteTitle" parent="@style/TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/pluralsightPlum</item>
    </style>

    <style name="BrandedText.CourseName">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ModuleName" parent="BrandedText">
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="AddFAB" parent="@style/Widget.MaterialComponents.FloatingActionButton">
        <item name="android:layout_margin">@dimen/fab_margin</item>
        <item name="srcCompat">@drawable/ic_add_white_24</item>
        <item name="tint">@color/white</item>
    </style>
</resources>